{
  "name": "sita-bi",
  "version": "1.0.0",
  "private": true,
  "description": "Sistem Informasi Tugas Akhir - Bisnis Informatika",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "cd apps/api && pnpm dev",
    "dev:frontend": "cd apps/web && pnpm dev",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd apps/api && pnpm build",
    "build:frontend": "cd apps/web && pnpm build",
    "start": "pnpm start:backend",
    "start:backend": "cd apps/api && pnpm start",
    "start:frontend": "cd apps/web && pnpm start",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "cd apps/api && pnpm lint",
    "lint:frontend": "cd apps/web && pnpm lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "tsx": "^4.16.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "knip": "^5.73.3",
    "prettier": "^3.7.3"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "puppeteer": "^24.30.0",
      "unzipper": "^0.12.3",
      "glob": "^10.0.0",
      "rimraf": "^5.0.0"
    }
  }
}