{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start:backend": "pnpm --filter api start",
    "start:frontend": "pnpm --filter web start -- -p 3001",
    "start": "pnpm start:backend",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:frontend": "pnpm --filter web dev",
    "dev:backend": "pnpm --filter api dev",
    "check:backend": "pnpm --filter api lint && pnpm --filter api format",
    "check:frontend": "pnpm --filter web lint && pnpm --filter web format",
    "check": "pnpm check:backend && pnpm check:frontend"
  },
  "dependencies": {
    "tsx": "^4.16.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "knip": "^5.73.3",
    "prettier": "^3.7.3",
    "turbo": "^2.6.1"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "puppeteer": "^24.30.0",
      "unzipper": "^0.12.3",
      "glob": "^10.0.0",
      "rimraf": "^5.0.0"
    }
  }
}
