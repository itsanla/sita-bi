  "service_layer": {
    "path": "apps/api/src/services/jadwal-sidang-smart.service.ts",
    "methods": {
      "generateJadwalOtomatis": {
        "deskripsi": "Generate jadwal sidang otomatis untuk semua mahasiswa siap sidang",
        "params": "void",
