{
  "fitur": "Penjadwalan Sidang Tugas Akhir",
  "deskripsi": "Sistem penjadwalan sidang dengan conflict detection, auto-assignment penguji, dan calendar view",
  "versi": "2.0.0",
  "tanggal_update": "2025-01-10",

  "logika_bisnis": {
    "overview": {
      "deskripsi": "Sistem penjadwalan sidang otomatis dengan smart algorithm untuk mahasiswa yang sudah approved (siap_sidang = true)",
      "waktu_penjadwalan": "Dapat dijadwalkan otomatis atau manual oleh Kaprodi",
      "mode": "Smart auto-scheduling dengan conflict detection, constraint satisfaction, dan optimasi beban dosen"
    },
    "fitur_utama": {
      "auto_scheduling": "Generate jadwal otomatis untuk semua mahasiswa siap sidang",
      "scheduled_generation": "Atur tanggal dan jam kapan jadwal akan di-generate otomatis",
      "manual_edit": "Edit jadwal individual setelah di-generate",
      "swap_schedule": "Tukar jadwal antar mahasiswa",
      "move_schedule": "Pindahkan jadwal massal ke tanggal lain",
      "export": "Export jadwal ke PDF dan Excel",
      "real_time_polling": "Auto-refresh status setiap 15 detik"
    },

    "aturan_penguji": {
      "jumlah_penguji": 3,
      "role_penguji": {
        "penguji1": "Ketua Penguji",
        "penguji2": "Anggota Penguji 1",
        "penguji3": "Anggota Penguji 2"
      },
      "pembimbing_sebagai_sekretaris": {
        "deskripsi": "Pembimbing 1 hadir sebagai sekretaris (bukan penguji)",
        "tugas": "Input nilai dari ketua dan anggota penguji",
        "catatan": "Pembimbing 1 TIDAK BOLEH menjadi penguji di sidang mahasiswa bimbingannya"
      },
      "larangan": [
        "Pembimbing 1 tidak boleh jadi penguji",
        "Pembimbing 2 tidak boleh jadi penguji",
        "Ketiga penguji harus berbeda"
      ],
      "assignment": "Random assignment dari pool dosen yang tersedia"
    },

    "pengaturan_dinamis": {
      "durasi_sidang_menit": {
        "default": 90,
        "deskripsi": "Durasi standar setiap sesi sidang",
        "path": "PengaturanSistem.durasi_sidang_menit"
      },
      "jeda_sidang_menit": {
        "default": 15,
        "deskripsi": "Waktu jeda setelah sidang selesai sebelum sidang berikutnya",
        "path": "PengaturanSistem.jeda_sidang_menit"
      },
      "ruangan_sidang": {
        "tipe": "array",
        "deskripsi": "List ruangan yang tersedia untuk sidang",
        "path": "PengaturanSistem.ruangan_sidang",
        "format": "[{ id: number, name: string }]"
      },
      "max_mahasiswa_uji_per_dosen": {
        "default": 10,
        "deskripsi": "Maksimal mahasiswa yang bisa diuji oleh 1 dosen dalam 1 periode",
        "path": "PengaturanSistem.max_mahasiswa_uji_per_dosen"
      },
      "jam_kerja": {
        "mulai": "08:00",
        "selesai": "16:00",
        "deskripsi": "Jam kerja untuk penjadwalan sidang",
        "path": "PengaturanSistem.jam_kerja_mulai, jam_kerja_selesai"
      },
      "hari_kerja": {
        "default": [1, 2, 3, 4, 5],
        "deskripsi": "Hari kerja (1=Senin, 5=Jumat)",
        "path": "PengaturanSistem.hari_kerja"
      }
    },

    "conflict_detection": {
      "deskripsi": "Sistem otomatis mendeteksi bentrok jadwal",
      "validasi": [
        "Ruangan tidak bentrok di waktu yang sama",
        "Dosen (penguji + sekretaris) tidak bentrok di waktu yang sama",
        "Mahasiswa belum dijadwalkan di waktu yang sama",
        "Durasi + jeda tidak overlap dengan jadwal lain"
      ],
      "response": {
        "valid": "Jadwal berhasil disimpan",
        "conflict": "Tampilkan error + saran slot kosong"
      }
    },

    "alur_penjadwalan": {
      "1_list_mahasiswa": {
        "deskripsi": "Jurusan melihat list mahasiswa siap sidang",
        "sumber_data": "Mahasiswa dengan siap_sidang = true",
        "info_ditampilkan": [
          "Nama mahasiswa",
          "NIM",
          "Judul TA",
          "Pembimbing 1 & 2",
          "Status penjadwalan"
        ]
      },
      "2_pilih_mahasiswa": {
        "deskripsi": "Jurusan klik 'Jadwalkan' pada mahasiswa",
        "action": "Buka modal penjadwalan"
      },
      "3_input_jadwal": {
        "deskripsi": "Jurusan input detail jadwal",
        "input": [
          "Tanggal sidang",
          "Waktu mulai",
          "Ruangan (dropdown dari pengaturan)",
          "Penguji 1, 2, 3 (multi-select dosen, exclude pembimbing)"
        ],
        "validasi_realtime": "Sistem cek conflict saat input"
      },
      "4_auto_calculate": {
        "deskripsi": "Sistem otomatis hitung waktu selesai",
        "formula": "waktu_selesai = waktu_mulai + durasi_sidang_menit"
      },
      "5_simpan_jadwal": {
        "deskripsi": "Sistem simpan jadwal dan assign penguji",
        "proses": [
          "Insert ke tabel JadwalSidang",
          "Insert 3 record ke PeranDosenTa (penguji1, penguji2, penguji3)",
          "Update status_hasil Sidang menjadi 'dijadwalkan'"
        ]
      }
    },

    "random_assignment_penguji": {
      "deskripsi": "Penentuan role penguji (ketua/anggota) dilakukan random",
      "algoritma": "Shuffle array penguji yang dipilih, assign ke penguji1/2/3",
      "catatan": "Jurusan hanya pilih 3 dosen, sistem yang tentukan siapa ketua/anggota"
    }
  },

  "struktur_database": {
    "tabel_utama": {
      "JadwalSidang": {
        "deskripsi": "Menyimpan jadwal sidang",
        "kolom": {
          "id": "Primary key",
          "sidang_id": "FK ke Sidang",
          "tanggal": "Tanggal sidang",
          "waktu_mulai": "Waktu mulai (HH:mm)",
          "waktu_selesai": "Waktu selesai (HH:mm)",
          "ruangan_id": "FK ke Ruangan",
          "created_at": "Timestamp",
          "updated_at": "Timestamp"
        }
      },
      "Ruangan": {
        "deskripsi": "Master data ruangan sidang",
        "kolom": {
          "id": "Primary key",
          "nama_ruangan": "Nama ruangan",
          "lokasi": "Lokasi ruangan",
          "kapasitas": "Kapasitas ruangan",
          "created_at": "Timestamp",
          "updated_at": "Timestamp"
        },
        "catatan": "Data ruangan di-sync dari pengaturan.ruangan_sidang"
      },
      "PeranDosenTa": {
        "deskripsi": "Menyimpan peran dosen (pembimbing + penguji)",
        "kolom": {
          "id": "Primary key",
          "tugas_akhir_id": "FK ke TugasAkhir",
          "dosen_id": "FK ke Dosen",
          "peran": "Enum: pembimbing1, pembimbing2, penguji1, penguji2, penguji3",
          "created_at": "Timestamp",
          "updated_at": "Timestamp"
        },
        "constraint": "UNIQUE(tugas_akhir_id, peran)"
      },
      "Sidang": {
        "kolom_penting": {
          "status_hasil": "Enum: menunggu_penjadwalan, dijadwalkan, lulus, lulus_revisi, tidak_lulus",
          "jenis_sidang": "Enum: PROPOSAL, AKHIR"
        }
      }
    }
  },

  "smart_scheduling_algorithm": {
    "deskripsi": "Algoritma penjadwalan otomatis dengan constraint satisfaction",
    "constraints": [
      "Ruangan tidak bentrok",
      "Dosen tidak bentrok (penguji + sekretaris)",
      "Mahasiswa belum dijadwalkan",
      "Pembimbing tidak boleh jadi penguji",
      "Dosen tidak melebihi max quota",
      "Jadwal dalam jam kerja",
      "Jadwal di hari kerja"
    ],
    "optimasi": [
      "Distribusi beban dosen merata",
      "Minimalisir gap waktu kosong",
      "Prioritas ruangan berdasarkan kapasitas"
    ],
    "algoritma": {
      "1_prepare_data": "Load mahasiswa siap sidang, dosen available, ruangan, pengaturan",
      "2_calculate_capacity": "Hitung kapasitas maksimal berdasarkan ruangan, jam kerja, durasi",
      "3_validate_capacity": "Cek apakah jumlah mahasiswa <= kapasitas",
      "4_assign_schedule": "Loop mahasiswa, assign slot waktu + ruangan + penguji",
      "5_conflict_check": "Validasi tidak ada conflict",
      "6_save_batch": "Simpan semua jadwal dalam 1 transaksi"
    },
    "error_handling": {
      "kapasitas_tidak_cukup": "Return error dengan detail perhitungan dan saran",
      "dosen_tidak_cukup": "Return error dengan detail kebutuhan vs ketersediaan",
      "conflict_detected": "Rollback dan return error detail"
    }
  },

  "api_endpoints": {
    "backend": {
      "path": "apps/api/src/api/jadwal-sidang-smart.router.ts",
      "endpoints": {
        "GET /jadwal-sidang-smart/mahasiswa-siap": {
          "deskripsi": "List mahasiswa siap sidang dengan status detail",
          "auth": "Prodi only",
          "response": {
            "data": [
              {
                "tugasAkhir": "TugasAkhir dengan relasi mahasiswa dan pembimbing",
                "status_display": "siap_sidang | menunggu_validasi | ditolak | belum_daftar",
                "validator_info": "string (info validator yang belum approve)",
                "rejection_reason": "string (alasan ditolak)"
              }
            ]
          }
        },
        "POST /jadwal-sidang-smart/generate": {
          "deskripsi": "Generate jadwal sidang otomatis untuk semua mahasiswa siap sidang",
          "auth": "Prodi only",
          "proses": [
            "1. Load pengaturan sistem",
            "2. Load mahasiswa siap sidang",
            "3. Load dosen available",
            "4. Hitung kapasitas",
            "5. Validasi kapasitas cukup",
            "6. Generate jadwal dengan constraint satisfaction",
            "7. Assign penguji random",
            "8. Save batch dalam transaksi",
            "9. Update status penjadwalan ke SELESAI"
          ],
          "response": {
            "success": {
              "message": "Berhasil menjadwalkan X mahasiswa",
              "data": "JadwalSidang[]"
            },
            "error": {
              "status": "KAPASITAS_TIDAK_CUKUP | DOSEN_TIDAK_CUKUP | CONFLICT_DETECTED",
              "masalah": "string (deskripsi masalah)",
              "perhitungan": "string (detail perhitungan)",
              "saran": "string (saran solusi)",
              "detail": "object (detail teknis)"
            }
          }
        },
        "GET /jadwal-sidang-smart/jadwal": {
          "deskripsi": "List semua jadwal sidang yang sudah di-generate",
          "auth": "Authenticated",
          "response": {
            "data": "JadwalSidang[] dengan relasi lengkap"
          }
        },
        "PATCH /jadwal-sidang-smart/jadwal/:id": {
          "deskripsi": "Edit jadwal sidang individual",
          "auth": "Prodi only",
          "body": {
            "tanggal": "Date (optional)",
            "waktu_mulai": "string (optional)",
            "waktu_selesai": "string (optional)",
            "ruangan_id": "number (optional)",
            "penguji1_id": "number (optional)",
            "penguji2_id": "number (optional)",
            "penguji3_id": "number (optional)"
          },
          "validasi": [
            "Conflict check",
            "Pembimbing tidak boleh jadi penguji",
            "Waktu mulai < waktu selesai"
          ]
        },
        "DELETE /jadwal-sidang-smart/jadwal/:id": {
          "deskripsi": "Hapus jadwal sidang individual",
          "auth": "Prodi only"
        },
        "DELETE /jadwal-sidang-smart/jadwal": {
          "deskripsi": "Hapus SEMUA jadwal sidang",
          "auth": "Prodi only",
          "warning": "Tindakan ini tidak dapat dibatalkan"
        },
        "POST /jadwal-sidang-smart/swap-schedule": {
          "deskripsi": "Tukar jadwal antar 2 mahasiswa",
          "auth": "Prodi only",
          "body": {
            "jadwal1_id": "number",
            "jadwal2_id": "number"
          },
          "proses": "Swap tanggal, waktu, dan ruangan antar 2 jadwal"
        },
        "POST /jadwal-sidang-smart/move-schedule": {
          "deskripsi": "Pindahkan jadwal massal ke tanggal lain",
          "auth": "Prodi only",
          "body": {
            "from_date": "Date",
            "to_date": "Date"
          },
          "proses": "Pindahkan semua jadwal dari from_date ke to_date dengan mempertahankan urutan hari"
        },
        "GET /jadwal-sidang-smart/export/pdf": {
          "deskripsi": "Export jadwal ke PDF",
          "auth": "Prodi only",
          "response": "application/pdf"
        },
        "GET /jadwal-sidang-smart/export/excel": {
          "deskripsi": "Export jadwal ke Excel",
          "auth": "Prodi only",
          "response": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
        },
        "GET /jadwal-sidang-smart/options": {
          "deskripsi": "Get options untuk dropdown (dosen, ruangan)",
          "auth": "Prodi only",
          "response": {
            "dosen": "[{ id, name }]",
            "ruangan": "[{ id, name }]"
          }
        },
        "GET /penjadwalan-sidang/pengaturan": {
          "deskripsi": "Get pengaturan jadwal generate (untuk Kaprodi)",
          "auth": "Prodi only",
          "response": {
            "data": {
              "id": "number",
              "tanggal_generate": "DateTime | null",
              "status": "belum_dijadwalkan | dijadwalkan | selesai"
            }
          }
        },
        "POST /penjadwalan-sidang/pengaturan": {
          "deskripsi": "Atur jadwal generate otomatis",
          "auth": "Prodi only",
          "body": {
            "tanggal_generate": "DateTime"
          },
          "validasi": "Tanggal harus di masa depan",
          "proses": "Upsert PenjadwalanSidang dengan status dijadwalkan"
        },
        "DELETE /penjadwalan-sidang/pengaturan": {
          "deskripsi": "Batalkan/hapus jadwal generate",
          "auth": "Prodi only",
          "proses": "Delete PenjadwalanSidang atau set status ke belum_dijadwalkan"
        },
        "GET /penjadwalan-sidang/status": {
          "deskripsi": "Get status penjadwalan untuk guard (public)",
          "auth": "Authenticated",
          "response": {
            "status": "BELUM_DIJADWALKAN | DIJADWALKAN | SELESAI",
            "tanggalGenerate": "DateTime | null",
            "isGenerated": "boolean"
          }
        },
        "GET /jadwal-sidang/mahasiswa-siap": {
          "deskripsi": "List mahasiswa siap sidang (siap_sidang = true)",
          "auth": "Jurusan only",
          "response": {
            "mahasiswa": [
              {
                "id": "number",
                "nim": "string",
                "nama": "string",
                "prodi": "D3 | D4",
                "tugas_akhir": {
                  "id": "number",
                  "judul": "string",
                  "pembimbing1": "{ id, nama, nip }",
                  "pembimbing2": "{ id, nama, nip }"
                },
                "is_scheduled": "boolean"
              }
            ]
          }
        },
        "GET /jadwal-sidang/calendar": {
          "deskripsi": "Calendar view semua jadwal sidang",
          "auth": "Jurusan, Dosen",
          "query": {
            "start": "Date (optional)",
            "end": "Date (optional)"
          },
          "response": {
            "events": [
              {
                "id": "number",
                "title": "string (nama mahasiswa)",
                "start": "DateTime",
                "end": "DateTime",
                "ruangan": "string",
                "mahasiswa": "{ id, nim, nama }",
                "penguji": "[ { id, nama, role } ]",
                "sekretaris": "{ id, nama }"
              }
            ]
          }
        },
        "POST /jadwal-sidang/check-conflict": {
          "deskripsi": "Real-time conflict check",
          "auth": "Jurusan",
          "body": {
            "tanggal": "Date",
            "waktu_mulai": "string (HH:mm)",
            "waktu_selesai": "string (HH:mm)",
            "ruangan_id": "number",
            "dosen_ids": "number[] (penguji + sekretaris)"
          },
          "response": {
            "has_conflict": "boolean",
            "conflicts": [
              {
                "type": "room | dosen",
                "message": "string",
                "conflicting_schedule": "object"
              }
            ],
            "suggested_slots": [
              {
                "waktu_mulai": "string",
                "waktu_selesai": "string"
              }
            ]
          }
        },
        "POST /jadwal-sidang": {
          "deskripsi": "Create jadwal sidang",
          "auth": "Jurusan",
          "body": {
            "mahasiswa_id": "number",
            "tanggal": "Date",
            "waktu_mulai": "string (HH:mm)",
            "ruangan_id": "number",
            "penguji_ids": "number[3] (3 dosen penguji)"
          },
          "proses": [
            "1. Validasi mahasiswa siap_sidang = true",
            "2. Validasi penguji bukan pembimbing",
            "3. Check conflict",
            "4. Random assign penguji1/2/3",
            "5. Insert JadwalSidang",
            "6. Insert 3 PeranDosenTa (penguji)",
            "7. Update Sidang.status_hasil = 'dijadwalkan'"
          ],
          "response": {
            "jadwal": "JadwalSidang object",
            "penguji": "PeranDosenTa[] (3 records)"
          }
        },
        "PUT /jadwal-sidang/:id": {
          "deskripsi": "Update/reschedule jadwal",
          "auth": "Jurusan",
          "body": "Same as POST",
          "proses": [
            "1. Check conflict (exclude current schedule)",
            "2. Update JadwalSidang",
            "3. Delete old PeranDosenTa (penguji only)",
            "4. Insert new PeranDosenTa",
            "5. Insert HistoryPerubahanSidang"
          ]
        },
        "DELETE /jadwal-sidang/:id": {
          "deskripsi": "Cancel jadwal sidang",
          "auth": "Jurusan",
          "proses": [
            "1. Delete JadwalSidang",
            "2. Delete PeranDosenTa (penguji only)",
            "3. Update Sidang.status_hasil = 'menunggu_penjadwalan'",
            "4. Insert HistoryPerubahanSidang"
          ]
        },
        "GET /jadwal-sidang/available-dosen": {
          "deskripsi": "List dosen yang available untuk jadi penguji",
          "auth": "Jurusan",
          "query": {
            "mahasiswa_id": "number",
            "tanggal": "Date",
            "waktu_mulai": "string",
            "waktu_selesai": "string"
          },
          "logic": [
            "1. Exclude pembimbing 1 & 2 mahasiswa tersebut",
            "2. Exclude dosen yang bentrok jadwal",
            "3. Exclude dosen yang sudah mencapai max_mahasiswa_uji_per_dosen",
            "4. Return list dosen available"
          ],
          "response": {
            "dosen": [
              {
                "id": "number",
                "nama": "string",
                "nip": "string",
                "jumlah_uji_periode_ini": "number"
              }
            ]
          }
        }
      }
    }
  },

