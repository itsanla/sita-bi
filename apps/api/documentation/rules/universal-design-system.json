{
  "systemName": "SITA-BI Design System",
  "version": "2.0.0",
  "lastUpdated": "2025-01-29",
  "description": "Universal design rules untuk sistem SITA-BI dengan fokus performa dan best practices 2025",
  "referenceImplementation": "/dashboard/mahasiswa/pengajuan",
  
  "colors": {
    "primary": {
      "maroon": {
        "50": "#fef2f2",
        "100": "#fee2e2",
        "200": "#fecaca",
        "300": "#fca5a5",
        "400": "#f87171",
        "500": "#7f1d1d",
        "600": "#991b1b",
        "700": "#7f1d1d",
        "800": "#5f1515",
        "900": "#450a0a",
        "DEFAULT": "#7f1d1d"
      }
    },
    "neutral": {
      "white": "#ffffff",
      "gray": {
        "50": "#f9fafb",
        "100": "#f3f4f6",
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827",
        "DEFAULT": "#6b7280"
      }
    },
    "accent": {
      "blue": {
        "light": "#3b82f6",
        "DEFAULT": "#2563eb",
        "dark": "#1e40af"
      },
      "green": {
        "light": "#10b981",
        "DEFAULT": "#059669",
        "dark": "#047857"
      },
      "amber": {
        "light": "#fbbf24",
        "DEFAULT": "#f59e0b",
        "dark": "#d97706"
      }
    },
    "semantic": {
      "success": "#059669",
      "warning": "#f59e0b",
      "error": "#dc2626",
      "info": "#2563eb"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "Inter, system-ui, -apple-system, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75",
      "loose": "2"
    },
    "headings": {
      "h1": {
        "fontSize": "2.25rem",
        "fontWeight": "700",
        "lineHeight": "1.25",
        "color": "#374151",
        "marginBottom": "1rem"
      },
      "h2": {
        "fontSize": "1.875rem",
        "fontWeight": "700",
        "lineHeight": "1.25",
        "color": "#374151",
        "marginBottom": "0.875rem"
      },
      "h3": {
        "fontSize": "1.5rem",
        "fontWeight": "600",
        "lineHeight": "1.25",
        "color": "#4b5563",
        "marginBottom": "0.75rem"
      },
      "h4": {
        "fontSize": "1.25rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#4b5563",
        "marginBottom": "0.5rem"
      },
      "h5": {
        "fontSize": "1.125rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#6b7280",
        "marginBottom": "0.5rem"
      },
      "h6": {
        "fontSize": "1rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#6b7280",
        "marginBottom": "0.5rem"
      }
    }
  },

  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "7": "1.75rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "sections": {
      "betweenElements": "1.5rem",
      "betweenCards": "1.5rem",
      "betweenSections": "3rem",
      "pageTop": "2rem",
      "pageBottom": "2rem",
      "pageHorizontal": "1.5rem"
    },
    "cards": {
      "padding": "1.5rem",
      "gap": "1rem"
    },
    "mobile": {
      "pageHorizontal": "0.5rem",
      "pageVertical": "0.75rem",
      "cardPadding": "1rem",
      "betweenCards": "1rem",
      "betweenElements": "0.75rem",
      "note": "Mobile padding sangat kecil untuk maksimalkan screen real estate"
    }
  },

  "layout": {
    "maxWidth": {
      "content": "1280px",
      "reading": "65ch",
      "form": "600px"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "container": {
      "padding": "1.5rem",
      "mobile": "p-0 sm:p-4 lg:p-6",
      "note": "Layout container tidak ada padding di mobile, child component yang atur padding sendiri"
    },
    "grid": {
      "columns": {
        "default": 12,
        "gap": "1.5rem"
      }
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.375rem",
    "base": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.25rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },

  "components": {
    "button": {
      "padding": {
        "sm": "0.5rem 1rem",
        "base": "0.75rem 1.5rem",
        "lg": "1rem 2rem"
      },
      "fontSize": {
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem"
      },
      "borderRadius": "0.75rem",
      "fontWeight": "600",
      "variants": {
        "primary": {
          "background": "#7f1d1d",
          "color": "#ffffff",
          "hover": {
            "background": "#991b1b"
          }
        },
        "secondary": {
          "background": "#f3f4f6",
          "color": "#374151",
          "hover": {
            "background": "#e5e7eb"
          }
        },
        "outline": {
          "background": "transparent",
          "border": "2px solid #7f1d1d",
          "color": "#7f1d1d",
          "hover": {
            "background": "#7f1d1d",
            "color": "#ffffff"
          }
        }
      }
    },
    "card": {
      "background": "#ffffff",
      "padding": "1.5rem",
      "borderRadius": "1rem",
      "border": "1px solid #e5e7eb",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
      "hover": {
        "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "transform": "translateY(-2px)"
      }
    },
    "input": {
      "padding": "0.75rem 1rem",
      "fontSize": "1rem",
      "borderRadius": "0.75rem",
      "border": "1px solid #d1d5db",
      "focus": {
        "borderColor": "#7f1d1d",
        "ring": "0 0 0 3px rgba(127, 29, 29, 0.1)"
      }
    },
    "table": {
      "header": {
        "background": "#f9fafb",
        "padding": "0.75rem 1rem",
        "fontSize": "0.75rem",
        "fontWeight": "600",
        "color": "#6b7280",
        "textTransform": "uppercase"
      },
      "row": {
        "padding": "1rem",
        "fontSize": "0.875rem",
        "borderBottom": "1px solid #e5e7eb",
        "hover": {
          "background": "#f9fafb"
        }
      },
      "pagination": {
        "itemsPerPage": 10,
        "buttonSize": "2.5rem",
        "gap": "0.5rem"
      }
    },
    "badge": {
      "padding": "0.25rem 0.75rem",
      "fontSize": "0.75rem",
      "fontWeight": "600",
      "borderRadius": "9999px",
      "variants": {
        "success": {
          "background": "#d1fae5",
          "color": "#047857"
        },
        "warning": {
          "background": "#fed7aa",
          "color": "#d97706"
        },
        "error": {
          "background": "#fee2e2",
          "color": "#dc2626"
        },
        "info": {
          "background": "#dbeafe",
          "color": "#1e40af"
        },
        "neutral": {
          "background": "#f3f4f6",
          "color": "#4b5563"
        }
      }
    }
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "base": "300ms",
      "slow": "500ms",
      "slower": "700ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "hover": {
      "scale": "1.02",
      "lift": "-2px",
      "rotate": "2deg"
    }
  },

  "accessibility": {
    "focusRing": {
      "width": "3px",
      "color": "#7f1d1d",
      "offset": "2px",
      "style": "solid"
    },
    "minTouchTarget": "44px",
    "contrastRatio": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    }
  },

  "language": {
    "default": "id",
    "dateFormat": "DD/MM/YYYY",
    "timeFormat": "HH:mm",
    "currency": "Rp",
    "numberFormat": {
      "decimal": ",",
      "thousands": "."
    }
  },

  "pages": {
    "dashboard": {
      "heroHeight": "200px",
      "cardGrid": {
        "columns": 4,
        "gap": "1.5rem"
      }
    },
    "forms": {
      "maxWidth": "600px",
      "labelFontSize": "0.875rem",
      "inputHeight": "2.75rem"
    },
    "tables": {
      "rowHeight": "3.5rem",
      "headerHeight": "3rem",
      "itemsPerPage": 10
    }
  },

  "performance": {
    "codesplitting": {
      "strategy": "dynamic-import",
      "icons": "React.lazy() untuk semua icons dari lucide-react",
      "components": "next/dynamic untuk dialog, modal, heavy components",
      "ssr": false
    },
    "dataFetching": {
      "library": "@tanstack/react-query",
      "caching": {
        "staleTime": {
          "static": "30000ms",
          "dynamic": "10000ms",
          "realtime": "5000ms"
        },
        "refetchInterval": "30000ms",
        "refetchOnWindowFocus": false
      },
      "optimisticUpdates": true,
      "requestDeduplication": true
    },
    "rendering": {
      "debouncing": "useDeferredValue untuk search inputs",
      "memoization": {
        "handlers": "useCallback untuk semua event handlers",
        "computed": "useMemo untuk filtered/sorted data",
        "components": "React.memo untuk pure components"
      },
      "suspense": "Wrap dengan Suspense untuk progressive loading",
      "virtualization": "@tanstack/react-virtual untuk list >100 items"
    },
    "bundleOptimization": {
      "treeShaking": true,
      "minification": true,
      "compression": "gzip/brotli",
      "targetBundleSize": "<200KB initial"
    }
  },

  "patterns": {
    "pengajuanMahasiswa": {
      "layout": {
        "parentContainer": "p-0 sm:p-4 lg:p-6 (dari layout.tsx)",
        "pageContainer": "max-w-7xl mx-auto",
        "background": "bg-gray-50",
        "padding": "px-2 py-3 sm:p-4 lg:p-6",
        "gap": "space-y-4 sm:space-y-6",
        "mobileNote": "Parent layout p-0, page container px-2 py-3 = total 8px horizontal"
      },
      "statusCards": {
        "grid": "grid-cols-1 md:grid-cols-3",
        "cardStyle": "bg-white rounded-xl shadow-base border",
        "padding": "p-6",
        "iconSize": "w-14 h-14",
        "hover": "hover:shadow-md transition-shadow duration-300"
      },
      "dosenList": {
        "searchDebounce": "useDeferredValue",
        "pagination": "5 items per page",
        "sorting": ["bimbingan_asc", "bimbingan_desc", "nama_asc", "nama_desc"],
        "progressBar": {
          "height": "h-2",
          "width": "w-24",
          "color": "bg-[#7f1d1d]"
        }
      },
      "riwayatPengajuan": {
        "layout": "grid-cols-1 lg:grid-cols-2",
        "filters": ["search", "status", "sort"],
        "dateFormat": "DD MMM YYYY, HH:mm WIB",
        "statusIcons": {
          "MENUNGGU_PERSETUJUAN_DOSEN": "Clock (amber)",
          "DISETUJUI": "CheckCircle (green)",
          "DITOLAK": "XCircle (red)",
          "DIBATALKAN_MAHASISWA": "X (gray)"
        }
      },
      "pembimbingAktif": {
        "placeholder": "Belum terhubung dengan Pembimbing X",
        "avatarGradient": "from-green-500 to-green-600",
        "pelepasanFlow": {
          "initiator": "Mahasiswa atau Dosen",
          "confirmation": "ConfirmDialog dengan variant warning",
          "actions": ["Lepaskan", "Batalkan", "Setuju", "Tolak"]
        }
      },
      "tawaranDosen": {
        "avatarGradient": "from-purple-500 to-purple-600",
        "actions": ["Terima", "Tolak"],
        "emptyState": "AlertCircle dengan pesan informatif"
      }
    }
  },

  "reactPatterns": {
    "hooks": {
      "useQuery": {
        "enabled": "!!user?.id untuk conditional fetching",
        "queryKey": "['resource-name', userId] untuk cache isolation",
        "staleTime": "30000 untuk static, 10000 untuk dynamic"
      },
      "useMutation": {
        "onMutate": "Cancel queries + return previous data",
        "onSuccess": "invalidateQueries untuk refetch",
        "onError": "Rollback dengan previous data"
      },
      "useCallback": "Wrap semua event handlers",
      "useMemo": "Untuk filtered, sorted, computed data",
      "useDeferredValue": "Untuk search query debouncing"
    },
    "imports": {
      "dynamic": "next/dynamic untuk heavy components",
      "lazy": "React.lazy() untuk icons",
      "suspense": "Wrap lazy components dengan Suspense"
    }
  },

  "apiIntegration": {
    "baseURL": "process.env.NEXT_PUBLIC_API_URL/api",
    "envVariable": "NEXT_PUBLIC_API_URL",
    "configFile": "lib/config.ts",
    "usage": "import { API_BASE_URL } from '@/lib/config'",
    "production": "WAJIB set NEXT_PUBLIC_API_URL di production environment",
    "headers": {
      "required": "x-user-id",
      "contentType": "application/json"
    },
    "endpoints": {
      "dosenTersedia": "GET /pengajuan/dosen-tersedia",
      "pengajuanMahasiswa": "GET /pengajuan/mahasiswa",
      "ajukanPembimbing": "POST /pengajuan/mahasiswa",
      "aksiPengajuan": "POST /pengajuan/:id/:action",
      "lepaskanBimbingan": "POST /pengajuan/lepaskan",
      "batalkanPelepasan": "POST /pengajuan/lepaskan/:id/batalkan",
      "konfirmasiPelepasan": "POST /pengajuan/lepaskan/:id/:action"
    },
    "errorHandling": {
      "toast": "sonner untuk user feedback",
      "rollback": "Optimistic updates dengan rollback on error"
    }
  },

  "uiComponents": {
    "confirmDialog": {
      "variants": ["danger", "warning", "info"],
      "loading": "dynamic import dengan ssr: false",
      "buttons": {
        "confirm": "Ya, Lanjutkan",
        "cancel": "Batal"
      }
    },
    "avatar": {
      "size": "w-10 h-10",
      "borderRadius": "rounded-lg",
      "gradient": {
        "dosen": "from-[#7f1d1d] to-[#991b1b]",
        "riwayat": "from-blue-500 to-blue-600",
        "pembimbing": "from-green-500 to-green-600",
        "tawaran": "from-purple-500 to-purple-600"
      },
      "initial": "First character uppercase, font-bold, text-white"
    },
    "badge": {
      "peran": {
        "P1": "bg-blue-100 text-blue-800",
        "P2": "bg-blue-100 text-blue-800"
      },
      "status": {
        "menunggu": "bg-orange-100 text-orange-800",
        "disetujui": "bg-green-100 text-green-800",
        "ditolak": "bg-red-100 text-red-800"
      }
    },
    "emptyState": {
      "icon": "w-12 h-12 text-gray-300",
      "text": "text-gray-500",
      "subtext": "text-gray-400 text-xs mt-1"
    },
    "tooltip": {
      "trigger": "HelpCircle w-4 h-4 text-gray-400 cursor-help",
      "content": "absolute w-64 p-3 bg-gray-900 text-white text-xs rounded-lg",
      "visibility": "opacity-0 invisible group-hover:opacity-100 group-hover:visible"
    }
  },

  "responsive": {
    "approach": "Mobile-first design",
    "breakpoints": {
      "mobile": "< 640px (default)",
      "tablet": "sm: >= 640px",
      "desktop": "lg: >= 1024px"
    },
    "mobileOptimization": {
      "horizontalPadding": "px-2 (8px) - Minimal untuk maksimalkan konten",
      "verticalPadding": "py-3 (12px) - Cukup untuk breathing room",
      "cardPadding": "p-3 (12px) - Lebih kecil dari desktop",
      "gap": "gap-3 (12px) - Lebih rapat untuk mobile",
      "fontSize": "text-sm sebagai base, scale up untuk desktop",
      "touchTarget": "Minimal 44x44px untuk semua interactive elements",
      "stackVertical": "flex-col untuk mobile, flex-row untuk desktop",
      "fullWidthButtons": "w-full di mobile untuk easier tap"
    }
  },

  "notes": {
    "colorScheme": "Dominan putih-abu-abu dengan aksen maroon (#7f1d1d)",
    "language": "Bahasa Indonesia",
    "consistency": "Semua halaman harus mengikuti aturan spacing, typography, dan color yang sama",
    "responsive": "Mobile-first: px-2 py-3 untuk mobile, scale up untuk tablet/desktop",
    "accessibility": "Ikuti standar WCAG 2.1 Level AA minimum",
    "performance": "Target: LCP <2.5s, FID <100ms, CLS <0.1",
    "bestPractices2025": [
      "React Query untuk data fetching & caching",
      "Dynamic imports untuk code splitting",
      "useDeferredValue untuk debouncing",
      "useCallback & useMemo untuk optimization",
      "Optimistic updates untuk instant feedback",
      "Suspense untuk progressive loading",
      "Lazy loading untuk icons & heavy components"
    ]
  }
}
